.navbar.navbar-default
    .container
        .row
            .col-sm-3
                .navbar-header
                    a.navbar-brand(href="/") 首页
                p.navbar-text #{title}
            .col-sm-7
                .form-group.col-sm-5.navbar-right
                    input#searchText.input-search.form-control(name="",type="text",placeholder="搜索...")
            .col-sm-2
                if user
                    p.navbar-text.navbar-right
                        span #{user.name}
                        span &nbsp;|&nbsp;
                        a.navbar-link(href="/logout") 注销
                else
                    p.navbar-text.navbar-right
                        a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
                        span &nbsp;|&nbsp;
                        a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") 登录
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST",action="/user/signup")
                .modal-header 注册
                .modal-body
                    .form-group
                        label(for="signupName") 用户名
                        input#signupName.form-control(name="user[name]",type="text")
                    .form-group
                        label(for="signupPassword") 密码
                        input#signupPassword.form-control(name="user[password]",type="password")
                .modal-footer
                    .row
                        .col-sm-2
                            button.btn.btn-default.btn-block(type="button",data-dismiss="modal") 关闭
                        .col-sm-2.col-sm-offset-8
                            button.btn.btn-default.btn-block.btn-success(type="submit") 注册

#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST",action="/user/signin")
                .modal-header 登录
                .modal-body
                    .form-group
                        label(for="signinName") 用户名
                        input#signinName.form-control(name="user[name]",type="text")
                    .form-group
                        label(for="signinPassword") 密码
                        input#signupPassword.form-control(name="user[password]",type="password")
                .modal-footer
                    .row
                        .col-sm-2
                            button.btn.btn-default.btn-block(type="button",data-dismiss="modal") 关闭
                        .col-sm-2.col-sm-offset-8
                            button.btn.btn-default.btn-block.btn-success(type="submit") 登录

