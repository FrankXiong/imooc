extends ../layout

block content
    .container
        .row
            form.form-horizontal(method="post",action="/admin/movie/new")
                input(type="hidden",name="movie[_id]",value="#{movie._id}")
                .form-group
                    label.col-sm-2.control-label(for="inputTitle") 电影名字
                    .col-sm-6
                        input#inputTitle.form-control(type="text",name="movie[title]")
                .form-group
                    label.col-sm-2.control-label(for="inputDirector") 导演
                    .col-sm-6
                        input#inputDirector.form-control(type="text",name="movie[director]")
                .form-group
                    label.col-sm-2.control-label(for="inputCountry") 国家
                    .col-sm-6
                        input#inputCountry.form-control(type="text",name="movie[country]")
                .form-group
                    label.col-sm-2.control-label(for="inputLanguage") 语种
                    .col-sm-6
                        input#inputLanguage.form-control(type="text",name="movie[language]")
                .form-group
                    label.col-sm-2.control-label(for="inputYear") 上映年份
                    .col-sm-6
                        input#inputYear.form-control(type="text",name="movie[year]")
                .form-group
                    label.col-sm-2.control-label(for="inputPoster") 海报地址
                    .col-sm-6
                        input#inputPoster.form-control(type="text",name="movie[poster]")
                .form-group
                    label.col-sm-2.control-label(for="inputFlash") 片源地址
                    .col-sm-6
                        input#inputFlash.form-control(type="text",name="movie[flash]")
                .form-group
                    label.col-sm-2.control-label(for="inputSummary") 电影简介
                    .col-sm-6
                        textarea#inputSummary.form-control(name="movie[summary]",rows="5")
                
                .form-group
                    .col-sm-offset-6.col-sm-2
                        button.btn.btn-default.btn-block.btn-success(type="submit") 录入                                                        


