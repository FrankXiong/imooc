extends ../layout

block content
    .container
        .row
            .col-md-7
                embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="application/x-shockwave-flash")
                .comment-container
                    .panel.panel-default
                        .panel-heading
                            h3 评论区
                        .panel-body
                            .row
                                .col-sm-12
                                    form(method="POST",action="/user/comment")
                                        input(type="hidden",name="comment[movie]",value="#{movie._id}")
                                        input(type="hidden",name="comment[from]",value="#{user._id}")
                                        .form-group
                                            textarea.form-control(name="comment[content]",row="5",style="max-width:100%")
                                        .col-sm-2.col-sm-offset-10
                                            button.btn.btn-success.btn-block(type="submit") 提交
                            .row
                                .col-sm-12
                                    ul.media-list
                                        each item in comments
                                            li.media
                                                div.media-left
                                                    a(href="#")
                                                        img.media-object(src="",style="width:50px;height:50px;",alt="")
                                                div.media-body
                                                    h4.media-heading #{item.from.name}
                                                    p #{item.content}
                                            hr

            .col-md-4.col-sm-offset-1
                .panel.panel-info
                    dl.dl-horizontal.movie-info
                        dt 电影名字
                        dd= movie.title
                        dt 导演
                        dd= movie.director
                        dt 国家
                        dd= movie.country
                        dt 语言
                        dd= movie.language
                        dt 上映年份
                        dd= movie.year
                        dt 简介
                        dd= movie.summary


