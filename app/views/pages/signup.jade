extends ../layout.jade

block content
    .container
        .row
            .col-md-6.col-sm-offset-3
                form(method="POST", action="/user/signup")
                    .modal-body
                        .form-group
                            label(for="signupName") 用户名
                            input#signupName.form-control(name="user[name]",type="text")
                        .form-group
                            label(for="signupPassword") 密码
                            input#signupPassword.form-control(name="user[password]",type="password")
                    .modal-footer
                        .row
                            .col-sm-2
                                button.btn.btn-default.btn-block(type="button",data-dismiss="modal") 关闭
                            .col-sm-2.col-sm-offset-8
                                button.btn.btn-default.btn-block.btn-success(type="submit") 注册